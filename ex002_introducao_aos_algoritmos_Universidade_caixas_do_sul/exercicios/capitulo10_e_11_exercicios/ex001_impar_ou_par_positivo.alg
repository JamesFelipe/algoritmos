algoritmo "impar ou par"
// Data : 08/05/2024
var

numero: inteiro
inicio

escreva("Digite um número inteiro: ")
leia(numero)
se numero > 0 entao
   se numero % 2 = 0 entao
      escreva("Número Par")
   senao
      escreva("Número Ímpar")
   fimse
senao
   escreva("Este número não é positivo")
fimse
fimalgoritmo
